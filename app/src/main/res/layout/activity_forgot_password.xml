<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/dimens_5sp"
    tools:context = ".ForgotPassword">

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation="vertical"
        android:id="@+id/forgot_first_layout">

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width = "100sp"
                android:layout_height = "100sp"
                android:src="@drawable/electline_logo"/>

            <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:text="Reset Password"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/dimens_20sp"/>
            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text="Verify your email address to "
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/dimens_17sp"/>
            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text="reset your password"
                android:textSize="@dimen/dimens_17sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_marginTop="@dimen/dimens_20sp"
            android:orientation="vertical">

            <EditText
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:hint="Enter Email address"
                android:drawableLeft="@drawable/ic_email"
                android:id="@+id/forgot_email"
                android:drawablePadding="@dimen/dimens_17sp"/>

            <Button
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:background="@drawable/button_background"
                android:text="Verify"
                android:id="@+id/forgot_verify"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimens_20sp"
                android:layout_margin="@dimen/dimens_15sp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimens_20sp">

            <TextView
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:text="Go Back"
                android:id="@+id/goback"
                android:drawableLeft="@drawable/ic_keyboard_backspace"
                android:drawablePadding="@dimen/dimens_20sp"
                android:textSize="@dimen/dimens_20sp"
                android:fontFamily="@font/poppins_bold"/>

        </LinearLayout>

    </LinearLayout>




    <include layout="@layout/forgot_password_second_layout"
        android:visibility="gone"
        android:id="@+id/forgot_second_layout"
        />


</LinearLayout>